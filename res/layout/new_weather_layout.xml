<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:tools="http://schemas.android.com/tools"  
    android:id="@+id/id_drawerlayout"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent" >  
    
    
	<LinearLayout 
	    android:id="@+id/background_layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:background="#FFFFFF"
	    >
	    
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="#484E61"
	        >
	        
	        <Button
	            android:id="@+id/switch_city"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            android:background="@drawable/homew"	/>
	        
	        
	        
	        <TextView
	            android:id="@+id/city_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:textColor="#fff"
	            android:textSize="24sp"	/>  
	            
	         <Button
	            android:id="@+id/refresh_weather"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:background="@drawable/refreshw"	/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/weatherback"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="7"
	        android:layout_margin="3dp"
	        android:background="#484E61"
	       	>
	        
	        <TextView
	            android:id="@+id/publish_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="10dp"
	            android:layout_marginTop="10dp"
	            android:textColor="#FFF"
	            android:textSize="20sp"	/>
	        
	        <TextView
	            android:id="@+id/slide_text1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"	            
	            android:layout_centerInParent="true"
	            android:layout_alignParentLeft="true"
	            android:text="侧滑添加"
	            android:textColor="#FFF"
	            />
	        
	        <ImageView
	            android:id="@+id/slide_image"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:background="@drawable/arrow_right" 
	            
	            android:layout_below="@id/slide_text1"
	            android:layout_marginLeft="-5dp"
	            android:layout_alignParentLeft="true"
	            />
	        
	        <TextView
	            android:id="@+id/slide_text2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"	            
	            android:layout_below="@id/slide_image"
	            android:layout_alignParentLeft="true"
	            android:text="特别关注"
	            android:textColor="#FFF"
	            />
	        
	        
	        
	        <LinearLayout
	            android:id="@+id/today_layout"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:orientation="vertical"	
	            >
	            
	            <TextView
	                android:id="@+id/current_date"
	                android:layout_width="wrap_content"
	                android:layout_height="40dp"
	                android:gravity="center"
	                android:textColor="#FFF"
	                android:textSize="20sp"	/>
	            
	            <TextView
	                android:id="@+id/type"
	                android:layout_width="wrap_content"
	                android:layout_height="60dp"
	                android:layout_gravity="center_horizontal"
	                android:gravity="center"
	                android:textColor="#FFF"
	                android:textSize="40sp"	/>
	            
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_horizontal"
	                android:orientation="vertical"	>
	                
	                <TextView
	                    android:id="@+id/temp_range"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_vertical"
	                    android:textColor="#FFF"
	                    android:textSize="30sp"	/>
	                          
	            </LinearLayout>
	                
	        </LinearLayout>
	        
	        <TextView
	                    android:id="@+id/cold_alert"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_centerInParent="true"
	                    android:layout_alignParentBottom="true"	                    
	                    android:textColor="#FFF"
	                    android:textSize="18sp"	/>
	        
	     </RelativeLayout>
	     
	     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:background="#484E61"
	        android:layout_marginLeft="3dp"
	        android:layout_marginRight="3dp"
	        android:orientation="vertical">
	        
	        <TextView 
	           android:layout_width="match_parent"
	           android:layout_height="match_parent"
	           android:gravity="center"
	           android:text="未来三天天气"
	           android:textColor="#FFF"
	           android:textSize="25sp"	
	            />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="2"
	        android:background="#FFFFFF"
	        android:layout_margin="3dp"
	        android:orientation="horizontal"	       
	        >
	        
	        <LinearLayout 
	            android:id="@+id/one_day_layout"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center"	           
	            android:layout_alignParentLeft="true"
	            android:layout_centerInParent="true"
	            android:layout_marginRight="3dp"            
	            android:background="#484E61"
	            android:orientation="vertical">
	            
	            <TextView 
	                android:id="@+id/date1"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_centerInParent="true"
	                
	                android:gravity="center"
	                android:textColor="#FFF"
	                android:textSize="18sp"
	                />
	            
	            <TextView 
	                android:id="@+id/type1"
	               	android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                
	                android:textColor="#FFF"
	                android:textSize="18sp"
	                android:gravity="center"
	                />
	            
	             <TextView 
	                android:id="@+id/temp_range1"
	               	android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:textColor="#FFF"
	                android:textSize="18sp"
	                />
          
	        </LinearLayout>
	        	        	        
	         <LinearLayout 
	            android:id="@+id/two_day_layout"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:layout_centerInParent="true"
	            
	            android:background="#484E61"
	            android:orientation="vertical">
	            
	             
	              <TextView 
	                android:id="@+id/date2"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_centerInParent="true"
	               
	                android:gravity="center"
	                android:textColor="#FFF"
	                android:textSize="18sp"
	                />
	            
	            <TextView 
	                android:id="@+id/type2"
	               	android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:textColor="#FFF"
	                android:textSize="18sp"
	                />
	            
	             <TextView 
	                android:id="@+id/temp_range2"
	               	android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:textColor="#FFF"
	                android:textSize="18sp"
	                />
	              
	        </LinearLayout>
	        
	          <LinearLayout 
	            android:id="@+id/three_day_layout"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:layout_alignParentRight="true"
	            android:layout_centerInParent="true"
	            android:layout_marginLeft="3dp"
	            
	            android:background="#484E61"
	            android:orientation="vertical">
	              
	               <TextView 
	                   android:id="@+id/date3"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_centerInParent="true"
		               
		                android:gravity="center"
		                android:textColor="#FFF"
		                android:textSize="18sp"
	                />
	            
	            <TextView 
	                android:id="@+id/type3"
	               	android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:textColor="#FFF"
	                android:textSize="18sp"
	                />
	            
	             <TextView 
	                android:id="@+id/temp_range3"
	               	android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:textColor="#FFF"
	                android:textSize="18sp"
	                />
	             
	        </LinearLayout>
	    </LinearLayout>
	    
	    <!-- 有米广告条 -->
	    <LinearLayout 
	        android:id="@+id/adLayout"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:background="#484E61"
	        android:layout_marginLeft="3dp"
	        android:layout_marginRight="3dp"
	        android:layout_marginBottom="3dp"
	        android:orientation="vertical">
	          
	    </LinearLayout>
	
	</LinearLayout>
	
	<LinearLayout  
        android:id="@+id/id_drawer"  
        android:layout_width="200dp"  
        android:layout_height="match_parent"  
        android:layout_gravity="start"  
        android:background="#FFFFFF"  
        android:orientation="vertical" >  
        
	    	<TextView 
	    	     android:layout_width="match_parent" 
        		 android:layout_height="50dp"
        		 android:background="#484E61"
        		 android:text="我关注的城市"
        		 android:gravity="center"
        		 android:textColor="#FFFFFF"
        		 android:textSize="22sp" />
      
            <ListView  
	            android:id="@+id/specialcitylist"  
	            android:layout_width="match_parent"  
	            android:layout_height="wrap_content" 
	            android:layout_weight="1"
	            android:divider="#484E61"  
	            android:dividerHeight="1dp" >  
        	</ListView> 
   
            <Button 
                android:id="@+id/add_specialcity"
                android:layout_width="wrap_content" 
        		android:layout_height="50dp"
        		android:layout_gravity="center"
        		
        		android:background="#FFFFFF"
        		android:drawableLeft="@drawable/plus_802px"
        		android:text="添加城市"
                />
            
             <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                
                 <CheckBox 
	                android:id="@+id/show_floatwindow"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                
	                />
            
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:layout_weight="1"
	                android:text="将当前城市显示在悬浮窗"
	                />
            
            </LinearLayout>

           <ImageView
                android:layout_width="match_parent"
	            android:layout_height="wrap_content"
                android:layout_weight="40"
               />
           
             <Button 
                android:id="@+id/exit"
                android:layout_width="fill_parent" 
        		android:layout_height="50dp"
        		android:layout_gravity="center"
        		
        		android:background="#484E61"
        		
        		android:text="退出程序"
        		android:textColor="#FFFFFF"
        		android:textSize="22sp"
                />
           
    </LinearLayout>  
</android.support.v4.widget.DrawerLayout> 

